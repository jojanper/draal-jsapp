{
    "family": "draaljs-fargate",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "web",
            "image": "249541985964.dkr.ecr.us-east-1.amazonaws.com/draaljs-app",
            "essential": true,
            "environment" : [
                { "name" : "PORT", "value" : "3008" },
                { "name": "MONGODB_URI", "value": "mongodb://draaljs-prod:joueec52ppgpain2@ds133991.mlab.com:33991/draaljs"}
            ],
            "cpu": 256,
            "memory": 512,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "awslogs-draaljs",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "app"
                }
            }
        },
        {
            "name": "nginx",
            "image": "249541985964.dkr.ecr.us-east-1.amazonaws.com/draaljs-nginx",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "volumesFrom": [
                {
                    "sourceContainer": "web"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "awslogs-draaljs",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "nginx"
                }
            },
            "cpu": 256,
            "memory": 512
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "executionRoleArn": "arn:aws:iam::249541985964:role/ecsTaskExecutionRole",
    "cpu": "512",
    "memory": "1024"
}