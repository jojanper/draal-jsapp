{
  "name": "draal-jsapp",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jojanper/draal-jsapp.git"
  },
  "bugs": {
    "url": "https://github.com/jojanper/draal-jsapp/issues"
  },
  "scripts": {
    "cibuild": "npm run lint && npm test",
    "lint": "eslint *.js **/*.js bin/www",
    "start": "NODE_PATH=$NODE_PATH:. DEBUG=draal-jsapp:* nodemon ./bin/www -e .js --ignore node_modules",
    "start-prod": "NODE_PATH=$NODE_PATH:. NODE_ENV=production node ./bin/www",
    "test": "NODE_PATH=$NODE_PATH:. NODE_ENV=test istanbul cover --report text node_modules/.bin/_mocha"
  },
  "dependencies": {
    "body-parser": "~1.16.0",
    "chalk": "^1.1.3",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.0",
    "express": "~4.14.1",
    "morgan": "~1.7.0",
    "pug": "~2.0.0-beta10",
    "serve-favicon": "~2.3.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-plugin-import": "^2.1.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.1.2",
    "nodemon": "~1.11.0",
    "sinon": "^2.0.0",
    "supertest": "^3.0.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "comma-dangle": 0,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-shadow": 0,
      "no-console": 0,
      "no-plusplus": 0,
      "object-curly-spacing": 0,
      "indent": ["error", 4],
      "import/no-extraneous-dependencies": [0],
      "import/no-unresolved": [0]
    },
    "env": {
      "node": true,
      "mocha": true
    },
    "globals": {
      "chai": true,
      "testapp": true,
      "testrunner": true
    }
  }
}
