{
  "name": "draal-jsapp",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jojanper/draal-jsapp.git"
  },
  "bugs": {
    "url": "https://github.com/jojanper/draal-jsapp/issues"
  },
  "license": "MIT",
  "main": "app.js",
  "scripts": {
    "cibuild": "npm run lint && npm test",
    "docker-build": "docker-compose build",
    "docker-run": "docker-compose up",
    "docker-rund": "docker-compose up -d",
    "docker-stop": "docker stop draaljs",
    "docker-rm": "docker rm draaljs",
    "docker-stop-webserver": "docker stop nginx",
    "docker-rm-webserver": "docker rm nginx",
    "lint": "eslint *.js ./config/*.js ./src/** ./test/**",
    "start": "NODE_PATH=$NODE_PATH:. DEBUG=draal-jsapp:* nodemon ./app.js -e .js --ignore node_modules",
    "start-prod": "NODE_PATH=$NODE_PATH:. NODE_ENV=production node ./app.js",
    "pretest": "mongo draaljs-test --eval \"db.dropDatabase()\"",
    "test": "NODE_PATH=$NODE_PATH:. NODE_ENV=test MONGODB_URI=mongodb://localhost:27017/draaljs-test istanbul cover --report text node_modules/.bin/_mocha",
    "client-install": "git clone https://github.com/jojanper/angular-app.git && cd angular-app && npm i",
    "client-build": "rimraf public && mkdir public && cd angular-app && cp -r dist/* ../public/ && cd .. && rm public/index.html && npm run client-template",
    "client-template": "node scripts/build_template",
    "client-watch": "nodemon --watch ./angular-app/dist --delay 250ms --exec 'npm run client-build'"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "chalk": "^1.1.3",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "^1.4.3",
    "debug": "^2.6.8",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "express-session": "^1.15.3",
    "mongoose": "^4.10.5",
    "morgan": "^1.8.2",
    "node-celery": "^0.2.8",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pug": "^2.0.0-rc.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-plugin-import": "^2.1.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.1.2",
    "nodemon": "~1.11.0",
    "rimraf": "^2.5.1",
    "sinon": "^2.3.2",
    "sinon-mongoose": "^2.0.2",
    "supertest": "^3.0.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "comma-dangle": 0,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-shadow": 0,
      "no-console": 0,
      "no-plusplus": 0,
      "object-curly-spacing": 0,
      "indent": [
        "error",
        4
      ],
      "import/no-extraneous-dependencies": [
        0
      ],
      "import/no-unresolved": [
        0
      ]
    },
    "env": {
      "node": true,
      "mocha": true
    },
    "globals": {
      "chai": true,
      "testapp": true,
      "testrunner": true,
      "appTestHelper": true
    }
  }
}
